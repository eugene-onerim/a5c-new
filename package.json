{
  "name": "document-processing-webapp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "concurrently \"npm run dev --workspace=apps/backend\" \"npm run dev --workspace=apps/frontend\"",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "type-check": "npm run type-check --workspaces",
    "backend:dev": "npm run dev --workspace=apps/backend",
    "frontend:dev": "npm run dev --workspace=apps/frontend"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "concurrently": "^8.2.2"
  },
  "packageManager": "npm@9.8.1",
  "engines": {
    "node": ">=18.0.0"
  }
}